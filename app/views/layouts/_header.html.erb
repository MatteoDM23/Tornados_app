<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="col-sm-6">
    <%= link_to "the tornados app", root_path, id: "logo" %>
  </div>
  <div class="container">
    <div class="col-6">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "About", about_path %></li>
        <li><%= link_to "Learn", learn_path %></li>
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Account <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <% if current_user.admin? == true %>
                <li><%= link_to "Users", users_path %></li>
              <% end %>
              <li><%= link_to "Report 2016 - part1", '/time', :"data-turbolinks" => false %></li>
              <li><%= link_to "Report 2016 - part2", '/feed', :"data-turbolinks" => false %></li>
              <li><%= link_to "Report 2016 - part3", '/hail/show', :"data-turbolinks" => false %></li>
              <li><%= link_to "Storms Forecast", '/twitter/show', :"data-turbolinks" => false %></li>
              <li class="divider"></li>
              <li><%= link_to "Log out", logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
  
</header>
              
